#include <stdio.h>
#include <string.h>
int main(){
    char string[] = "coding";
    printf("%s", string);
    int lengthOfString = strlen(string);
    printf("%d", lengthOfString);
    int sizeofString = (sizeof(string))/sizeof(string[0]);
    printf("%d", sizeofString);
    return 0;
}
#include <stdio.h>
#include <string.h>
int main(){
    char string[100];
    printf("Enter you string: ");
    fgets(string, 100, stdin);
    printf("%s", string);
    int lengthOfString = strlen(string);
    printf("%d", lengthOfString);
    int sizeofString = (sizeof(string))/sizeof(string[0]);
    printf("%d", sizeofString);
    return 0;
}

#include <stdio.h>
#include <string.h>

int palindrome(char arr[], int n){
    int left = 0;
    int right = n - 1;
    while(left < right){
        if(arr[left] != arr[right]){
            left++;right--;
            return 0;
        }
    }
    return 1;
}

int main(){
    char string[100];
    printf("Enter you string: ");
    fgets(string, 100, stdin);
    int response = palindrome(string);
    if(response ==  1){
        printf("yes it is palin");
    }else{
        printf("no it is not");
    }
    
    return 0;
}
